<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Cantidad de dinero"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/Cash_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/Five_cent_Image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/Ten_cent_Image"
        app:layout_constraintEnd_toStartOf="@+id/Ten_cent_Image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Ten_cent_Image"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/Ten_cent_Image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Five_cent_Image"
        app:layout_constraintTop_toBottomOf="@+id/Cash_Text"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/Quarter_cent_Image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/dollar_cent_Image"
        app:layout_constraintEnd_toEndOf="@+id/Five_centTV"
        app:layout_constraintStart_toStartOf="@+id/Five_centTV"
        app:layout_constraintTop_toTopOf="@+id/dollar_cent_Image"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/dollar_cent_Image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="@+id/Ten_centTV"
        app:layout_constraintStart_toStartOf="@+id/Ten_centTV"
        app:layout_constraintTop_toBottomOf="@+id/Ten_centTV"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/Five_centTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.05"
        app:layout_constraintBottom_toBottomOf="@+id/Ten_centTV"
        app:layout_constraintEnd_toEndOf="@+id/Five_cent_Image"
        app:layout_constraintStart_toStartOf="@+id/Five_cent_Image"
        app:layout_constraintTop_toTopOf="@+id/Ten_centTV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Ten_centTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="$0.10"
        app:layout_constraintEnd_toEndOf="@+id/Ten_cent_Image"
        app:layout_constraintStart_toStartOf="@+id/Ten_cent_Image"
        app:layout_constraintTop_toBottomOf="@+id/Ten_cent_Image" />

    <TextView
        android:id="@+id/Quarter_centTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$0.25"
        app:layout_constraintBottom_toBottomOf="@+id/Dollar_centTV"
        app:layout_constraintEnd_toEndOf="@+id/Quarter_cent_Image"
        app:layout_constraintStart_toStartOf="@+id/Quarter_cent_Image"
        app:layout_constraintTop_toTopOf="@+id/Dollar_centTV" />

    <TextView
        android:id="@+id/Dollar_centTV"
        android:layout_width="63dp"
        android:layout_height="18dp"
        android:text="$1"
        app:layout_constraintEnd_toEndOf="@+id/dollar_cent_Image"
        app:layout_constraintStart_toStartOf="@+id/dollar_cent_Image"
        app:layout_constraintTop_toBottomOf="@+id/dollar_cent_Image" />

</androidx.constraintlayout.widget.ConstraintLayout>